<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
        ">

    <context:annotation-config/>

    <context:component-scan base-package="com.jsruiyin.wechat"/>

    <context:property-placeholder location="/WEB-INF/redis/j2cache.properties,/WEB-INF/mysql/resources.properties" />

    <import resource="spring-context-redis.xml"/>

    <bean id="baseDao" class="com.jsruiyin.wechat.message.resp.dao.BaseDao"/>

    <bean id="articleDao" class="com.jsruiyin.wechat.message.resp.dao.ArticleDao"/>

    <bean id="newsMessage" class="com.jsruiyin.wechat.message.resp.NewsMessage"/>





</beans>